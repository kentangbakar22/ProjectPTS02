<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/well"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="231dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="Logo Aplikasi"
            android:src="@drawable/kena" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_marginBottom="20dp"
            android:text="WELCOME TO KENA"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNamaLengkap"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Nama Lengkap" />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Tanggal Lahir"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Hobi"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnMasuk"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fraame"
            android:text="Masuk" />

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fraame"
            android:text="KEMBALI KE LOGIN" />

    </LinearLayout>
</ScrollView>
